<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
  <data>
    <variable
        name="transaction"
        type="com.wei.weiwallet.data.model.EtherscanTransaction"
        />
    <variable
        name="myAddress"
        type="String"
        />
  </data>
  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <ImageView
          android:id="@+id/thumbnail"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_margin="16dp"
          android:src="@mipmap/ic_launcher"
          tools:src="@mipmap/ic_launcher"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:orientation="vertical"
          >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{transaction.displayDate()}"
            tools:text="2018/04/01 10:00"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@{transaction.isReceive(myAddress)}"
              android:textSize="14sp"
              android:textStyle="bold"
              tools:text="受け取り済み"
              />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginRight="16dp"
              android:gravity="right"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="@{transaction.displayValue()}"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="0.035"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_hint"
                android:textSize="12sp"
                tools:text="ETH"
                />
          </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="top"
              android:layout_marginRight="4dp"
              android:background="@drawable/shape_light_hint_rounded_4dp"
              android:paddingLeft="8dp"
              android:paddingRight="8dp"
              android:text="@{transaction.displaySenderAndReceiver(myAddress)}"
              android:textColor="@color/white"
              tools:text="From"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="4dp"
              android:text="@{transaction.address(myAddress)}"
              android:textColor="@color/hint"
              tools:text="0x8c51aCd7E7194949CEE7c9eC98958F8F4Bc614e9"
              />
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</layout>
